<docking:DockableContent
        x:Class="Log_Watcher.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Log_Watcher"
        xmlns:docking="clr-namespace:DockingLibrary;assembly=DockingLibrary"
        mc:Ignorable="d"
        Title="LogWindow" Height="450" Width="800">
    <Window.Resources>
        <local:LogViewModel x:Key="LogViewModelKey"/>

        <DataTemplate x:Key="LogItemTemplate">
            <TextBlock 
                Text="{Binding Line}"
                Foreground="White"
                FontSize="9"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox 
            Background="#2A2A2A"
            x:Name="LogListBox"
            Grid.Column="0" 
            ItemsSource="{Binding Log, UpdateSourceTrigger=PropertyChanged}"
            ItemTemplate="{StaticResource LogItemTemplate}"/>
        <Image 
            Margin="2.5" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Height="25" 
            Width="25" 
            x:Name="LogPP" 
            Source="{Binding PPImage, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</docking:DockableContent>
